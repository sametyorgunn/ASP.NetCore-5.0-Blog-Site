@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>Kategoriler</h1>

<table class="table table-bordered">
<tr>
    <th>#</th>
    <th>kategori adı</th>
    <th>Durumu</th>
    <th>pasif yap</th>
    <th>aktif yap</th>
    <th>düzenle</th>
</tr>

@foreach(var item in Model)
{

    <tr>
        <th>@item.CategoryID</th>
        <td>@item.CategoryName</td>
        <td>@item.CategoryStatus</td>
        <td><a href="/Admin/Category/KategoriPasifYap/@item.CategoryID" id="Deletebtn" onclick="return confirm('pasif yapmak istediğinize eminmisini?')" class="btn btn-danger">Pasif yap</a></td>
        <td><a href="/Admin/Category/KategoriAktifYap/@item.CategoryID" class="btn btn-warning">Aktif yap</a></td>
        <td><a href="/Admin/Category/KategoriDuzenle/@item.CategoryID" class="btn btn-success">Düzenle</a></td>
    </tr>
}
</table>
<a href ="/Admin/Category/AddCategory" class="btn btn-primary">Yeni kategori ekle</a>
<br />
<br />
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

@section scripts{}


 